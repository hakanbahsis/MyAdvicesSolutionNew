@using MyAdvices.Web
@model IEnumerable<MyAdvices.Entities.Category>

@{
    ViewBag.Title = "Kategoriler";
}



<div class="container">
    
    <div class="row">
        <div class="col-md-10 offset-md-1">
        <h2>Kategoriler</h2>
    </div>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <p>
                @Html.ActionLink("Create New", "Create","Category", null, new { @class = "btn btn-primary" })
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedUsername)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="font-size:medium">
                           @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td style="font-size:medium">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td style="font-size:medium">
                            @Html.DisplayFor(modelItem => item.ModifiedOn)
                        </td>
                        <td style="font-size:medium">
                            @Html.DisplayFor(modelItem => item.ModifiedUsername)
                        </td>
                        <td>
                            @Bootstrap.LinkButton("/Category/Edit/" +item.Id,"warning","btn-xs","Edit","edit","Düzenle")
                            @Bootstrap.LinkButton("/Category/Details/" + item.Id,"info","btn-xs", "Details", "search","Detay")
                            @Bootstrap.LinkButton("/Category/Delete/" + item.Id,"danger","btn-xs", "Delete", "trash","Sil")

                        </td>
                    </tr>
                   
                }

            </table>
        </div>
    </div>

</div>



