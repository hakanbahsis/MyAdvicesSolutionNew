@using MyAdvices.Entities.ValueObject
@model RegisterViewModel


@{
    ViewBag.Title = "Kayıt Sayfası";
}

<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />


@using (Html.BeginForm())
{
    <main class="login-form">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header"><b>Kayıt Formu</b></div>
                        <div class="card-body">
                           <div class="mb-2"> @Html.ValidationSummary(false)</div>

                            <form action="" class="mt-1">
                                <div class="form-group row mb-1">

                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">Adınız</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adınızı Girin" })

                                    </div>
                                </div>
                                <div class="form-group row mb-1">

                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">Soyadınız</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Soyadınızı Girin" })

                                    </div>
                                </div>
                                <div class="form-group row mb-1">

                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">Kullanıcı Adınız</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınızı Girin" })

                                    </div>
                                </div>
                                <div class="form-group row mb-1">

                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail Adresi</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(model => model.EMail, new { @class = "form-control", placeholder = "E-Mail Adresinizi Girin" })

                                    </div>
                                </div>
                                <div class="form-group row mb-1">
                                    <label for="password" class="col-md-4 col-form-label text-md-right">Parola</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Parolanızı Girin", type = "password" })

                                    </div>
                                </div>
                                <div class="form-group row mb-1">
                                    <label for="password" class="col-md-4 col-form-label text-md-right">Parola tekrar</label>
                                    <div class="col-md-6">
                                        @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Parolanızı Tekrar Girin", type = "password" })

                                    </div>
                                </div>
                                <br />
                                <div class="col-md-5 offset-md-5">
                                    <button type="submit" class="btn btn-primary">
                                       Kayıt Ol
                                    </button>
                                    
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    </main>
}



