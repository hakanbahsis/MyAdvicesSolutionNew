@using MyAdvices.Web
@using MyAdvices.Entities
@using MyAdvices.Web.Models


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Advices </title>

    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />

    <link href="@Url.Content("~/fontawesome/css/all.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/MyAdvices.css")" rel="stylesheet" />

    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/MyAdvices.css")" type="text/css" />

    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/jquery-3.6.0.js"></script>


    <link href="~/fontawesome/css/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/fontawesome/css/all.css" rel="stylesheet" />
    <link href="~/Content/validation-summary.css" rel="stylesheet" />
    <link href="~/Content/login-register.css" rel="stylesheet" />

</head>
<body>
    

    <section>
    <header id="header">
        <nav class="navbar navbar-expand-lg bg-light  py-3" style="background-color: #f5f5f5; border-bottom: 1px solid #414141;">
            <div class="container">
                <a class="navbar-brand" href="/Home/Index">
                    <img src="~/images/logo-1.png" alt="" class="d-inline-block align-text-top">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <form class="d-flex ms-auto" role="search">
                        <input class="form-control me-2" type="search" placeholder="Arama" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Ara</button>
                    </form>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Anasayfa</a>
                        </li>
                       
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home/MostLiked"><span class=" glyphicon glyphicon-star"</span>En Beğenilenler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home/Index">Son Yazılanlar</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (CurrentSession.User == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Login">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Register">Üye Ol</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link " href="/Home/ShowProfile">@CurrentSession.User.Username</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/LogOut">Çıkış Yap</a>
                            </li>


                            
                        }


                    </ul>

                </div>
            </div>
        </nav>
    </header>
   </section>

    @RenderBody()
  

</body>
</html>